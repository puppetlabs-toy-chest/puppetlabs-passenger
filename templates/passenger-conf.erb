LoadModule passenger_module <%= scope.lookupvar('::passenger::gem_path') %>/passenger-<%= scope.lookupvar('::passenger::passenger_version') %>/ext/apache2/mod_passenger.so
PassengerRoot <%= scope.lookupvar('::passenger::gem_path') %>/passenger-<%= scope.lookupvar('::passenger::passenger_version') %>
PassengerRuby /usr/bin/ruby

# you probably want to tune these settings
PassengerHighPerformance on
PassengerMaxPoolSize 12
PassengerPoolIdleTime 1500
# PassengerMaxRequests 1000
PassengerStatThrottleRate 120
RailsAutoDetect On
